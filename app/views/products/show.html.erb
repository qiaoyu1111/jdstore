<div class="row">
  <div class="col-md-6">
    <% if @product.image.present? %>
      <%= image_tag(@product.image.medium.url, class: "thumbnail") %>
    <% else %>
      <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2> <%= @product.title %> </h2>
    <div style="height:100px;">
      <p>
        <%= @product.description %>
      </p>
    </div>
    <div> <%= t("quantity") %> : <%= @product.quantity %></div>
    <div> <%= t("sale_time") %> : <%= @product.created_at.to_s %></div>

    <div class="product-price"> <%= t("sale_price") %> ï¿¥ <%= @product.price %> </div>
    <div class="pull-right">
      <% if @product.quantity.present? && @product.quantity > 0 %>
        <%= link_to("add", add_to_cart_product_path(@product), method: :post,
                    class: "btn btn-lg btn-danger") %>
      <% else %>
        <%= t("empty") %>
      <% end %>
    </div>
  </div>


</div>
